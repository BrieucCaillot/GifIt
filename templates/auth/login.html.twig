{% extends 'base.html.twig' %}

{% block title %}Log in{% endblock %}

{% block container_class %}{% endblock %}

{% block body %}
    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">

                {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.username }},
                        <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}

                {% if error %}
                    <div class="row">
                        <div class="col">
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        </div>
                    </div>
                {% endif %}
                <form method="post" class="login100-form">
                    <span class="login100-form-title mb-4">
                        Login ⚡️
                    </span>
                    <input type="hidden"
                           name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}">
                    <div class="wrap-input100 rs1 validate-input">
                        <input type="email"
                               value="{{ last_username }}"
                               name="email"
                               id="inputEmail"
                               class="input100"
                               required
                               autofocus>
                        <label for="inputEmail" class="label-input100">Email</label>
                    </div>
                    <div class="wrap-input100 rs2 validate-input">
                        <input type="password"
                               name="password"
                               id="inputPassword"
                               class="input100"
                               required>
                        <label for="inputPassword" class="label-input100">Password</label>
                    </div>
                    <div class="container-login100-form-btn">
                        <button class="login100-form-btn" type="submit">Sign in</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

{% endblock %}
